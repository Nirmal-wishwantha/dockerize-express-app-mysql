{
  "name": "backend",
  "version": "1.0.0",
  "description": "user management system",
  "main": "server.js",
  "scripts": {
    "test": "jest --coverage --testTimeout=30000",
    "lint": "eslint . --fix",
    "start": "node server.js",
    "start:dev": "nodemon server.js",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.11.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.12.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.57.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.7"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js",
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  }
}